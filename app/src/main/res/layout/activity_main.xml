<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewFileName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No MP4 file selected"
        android:textSize="18sp"
        android:paddingBottom="8dp" />

    <Button
        android:id="@+id/buttonSelectMp4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select MP4 File" />

    <EditText
        android:id="@+id/editTextRemoteIp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Remote IP Address (e.g., 192.168.1.100)"
        android:inputType="textUri"
        android:text="192.168.1.100" /> <Button
    android:id="@+id/buttonStream"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Start Stream"
    android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/buttonStopStream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Stream" />

    <TextView
        android:id="@+id/textViewStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Status: Disconnected"
        android:textSize="16sp" />

</LinearLayout>